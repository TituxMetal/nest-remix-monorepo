{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@virgile/typescript-config/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "noEmit": false,
    "lib": ["DOM", "ES2022"]
  },
  "include": ["./src/**/*"]
}
