{
  "extends": "@virgile/typescript-config/base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "noEmit": false,
    "lib": ["DOM", "ES2023"]
  },
  "include": ["./src/**/*"]
}
